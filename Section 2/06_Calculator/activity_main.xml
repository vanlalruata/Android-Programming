<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="5"
    android:columnCount="4"
    android:padding="16dp"
    android:alignmentMode="alignMargins">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:textSize="24sp"
        android:padding="10dp"
        android:text="0"/>

    <Button android:text="7" android:onClick="onClickNumber"/>
    <Button android:text="8" android:onClick="onClickNumber"/>
    <Button android:text="9" android:onClick="onClickNumber"/>
    <Button android:text="/" android:onClick="onClickOperator"/>

    <Button android:text="4" android:onClick="onClickNumber"/>
    <Button android:text="5" android:onClick="onClickNumber"/>
    <Button android:text="6" android:onClick="onClickNumber"/>
    <Button android:text="*" android:onClick="onClickOperator"/>

    <Button android:text="1" android:onClick="onClickNumber"/>
    <Button android:text="2" android:onClick="onClickNumber"/>
    <Button android:text="3" android:onClick="onClickNumber"/>
    <Button android:text="-" android:onClick="onClickOperator"/>

    <Button android:text="0" android:onClick="onClickNumber"/>
    <Button android:text="C" android:onClick="onClickClear"/>
    <Button android:text="=" android:onClick="onClickEquals"/>
    <Button android:text="+" android:onClick="onClickOperator"/>
</GridLayout>
